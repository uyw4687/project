{{>layout/header}}

<div class="container-fluid">

<h2>게시판</h2>
{{#name}}
    {{name}}님 안녕하세요<br />
    <a href="post-new" class="btn btn-primary" role="button">작성</a>
    <a href="/logout" class="btn btn-light" role="button">로그아웃</a>
{{/name}}
{{^name}}
    <a href="/oauth2/authorization/google" class="btn btn-info" role="button">구글 로그인</a><br />
    <a href="/oauth2/authorization/naver" class="btn btn-success" role="button">네이버 로그인</a><br />
{{/name}}
<table class="table table-bordered">
    <thead><tr>
        <th>번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>최종 수정 시간</th>
    </tr></thead>
    <tbody>
    {{#posts}}
        <tr>
            <td><a href="/posts/{{id}}">{{id}}</a></td>
            <td>{{title}}</td>
            <td>{{author}}</td>
            <td>{{lastModified}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>

</div>

{{>layout/footer}}
