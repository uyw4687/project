{{>layout/header}}

<div class="container-fluid">

<h2>게시물 작성 서비스</h2>
<a href="post-new" class="btn btn-primary" role="button">작성</a>
<br />
<table class="table table-bordered">
    <thead><tr>
        <th>번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>최종 수정 시간</th>
    </tr></thead>
    <tbody>
    {{#posts}}
        <tr>
            <td><a href="/posts/{{id}}">{{id}}</a></td>
            <td>{{title}}</td>
            <td>{{author}}</td>
            <td>{{lastModified}}</td>
        </tr>
    {{/posts}}
    </tbody>
</table>

</div>

{{>layout/footer}}
